<h1>BobaBoba</h1>
  <div class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-start">
      <div class="navbar-item">
        <%= link_to "Home", root_path, class: "nav-links" %>
      </div>
    </div>
    <% if current_user %>
      <div class="navbar-end">
        <div class="navbar-item">
          <p>Is it boba time, <strong><%= current_user.email %></strong>?</p> &nbsp;|&nbsp;
          <p><%= link_to "Sign out", '/users/sign_out', method: 'delete', class: "nav-links" %></p>
        </div>
      <% else %>
        <div class="navbar-item">
          <p><%= link_to "Sign in", '/users/sign_in', class: "nav-links" %></p>
          &nbsp;|&nbsp;
          <p><%= link_to "Sign up", '/users/sign_up', class: "nav-links" %></p>
        </div>
      <% end %>
    </div>
  </div>
